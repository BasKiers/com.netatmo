{
  "id": "com.netatmo",
  "version": "1.0.7",
  "compatibility": ">=0.8.30",
  "category": "climate",
  "name": {
    "en": "NetAtmo"
  },
  "description": {
    "en": "Adds support for your NetAtmo devices"
  },
  "author": {
    "name": "Athom B.V.",
    "website": "https://www.athom.com"
  },
  "images": {
    "large": "assets/images/large.jpg",
    "small": "assets/images/small.jpg"
  },
  "drivers": [
    {
      "id": "weatherstation",
      "name": {
        "en": "Weather Station",
        "nl": "Weerstation"
      },
      "images": {
        "large": "./drivers/weatherstation/assets/images/large.jpg",
        "small": "./drivers/weatherstation/assets/images/small.jpg"
      },
      "class": "sensor",
      "capabilities": [
        "measure_temperature",
        "measure_co2",
        "measure_humidity",
        "measure_pressure",
        "measure_noise",
        "measure_rain",
        "measure_wind_strength",
        "measure_wind_angle",
        "measure_gust_strength",
        "measure_gust_angle"
      ],
      "pair": [
        {
          "id": "start"
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_stations"
          }
        },
        {
          "id": "add_stations",
          "template": "add_devices"
        }
      ]
    },
    {
      "id": "thermostat",
      "name": {
        "en": "Thermostat",
        "nl": "Thermostaat"
      },
      "images": {
        "large": "./drivers/thermostat/assets/images/large.jpg",
        "small": "./drivers/thermostat/assets/images/small.jpg"
      },
      "class": "thermostat",
      "capabilities": [
        "measure_temperature",
        "target_temperature"
      ],
      "pair": [
        {
          "id": "start"
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_stations"
          }
        },
        {
          "id": "add_stations",
          "template": "add_devices"
        }
      ]
    }
  ],
  "dependencies": {
    "request": "*",
    "extend": "*"
  }
}
