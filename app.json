{
	"id": "com.netatmo",
	"version": "1.0",
	"name": {
		"en": "NetAtmo"
	},
	"description": {
		"en": "Adds support for your NetAtmo devices"
	},
	"author": {
		"name": "Emile Nijssen",
		"website": "http://www.emilenijssen.nl"
	},
	"images": {
		"large": "large.jpg",
		"small": "small.jpg"
	},
	"drivers": [
		{
			"id": "weatherstation",
			"name": {
				"en": "NetAtmo Weather Station",
				"en": "NetAtmo Weerstation"
			},
			"class": "sensor",
			"capabilities": [ "measure_temperature", "measure_co2", "measure_humidity", "measure_pressure", "measure_noise", "measure_rain", "measure_wind_strength", "measure_wind_angle" ],
			"pair": [
				{
					"id": "start"
				},
				{
					"id": "list_devices",
					"template": "list_devices",
					"navigation": {
						"next": "add_stations"
					}
				},
				{
					"id": "add_stations",
					"template": "add_devices"
				}
			]
		},
		{
			"id": "thermostat",
			"name": {
				"en": "NetAtmo Thermostat"
			},
			"class": "thermostat",
			"capabilities": [ "target_temperature", "measure_temperature" ],
			"pair": [
				{
					"id": "start"
				},
				{
					"id": "list_devices",
					"template": "list_devices",
					"navigation": {
						"next": "add_thermostats"
					}
				},
				{
					"id": "add_thermostats",
					"template": "add_devices"
				}
			]
		}
	],
	"dependencies": {
		"request": "*"
	}
}