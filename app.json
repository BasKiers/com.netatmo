{
	"id": "com.netatmo",
	"version": "1.0.1",
	"compatibility": "0.x || 1.x",
	"category": "climate",
	"name": {
		"en": "NetAtmo"
	},
	"description": {
		"en": "Adds support for your NetAtmo devices"
	},
	"author": {
		"name": "Athom B.V.",
		"website": "https://www.athom.com"
	},
	"images": {
		"large": "assets/images/large.jpg",
		"small": "assets/images/small.jpg"
	},
	"drivers": [
		{
			"id": "weatherstation",
			"name": {
				"en": "NetAtmo Weather Station",
				"en": "NetAtmo Weerstation"
			},
			"images": {
				"large": "./drivers/weatherstation/assets/images/large.jpg",
				"small": "./drivers/weatherstation/assets/images/small.jpg"
			},
			"class": "sensor",
			"capabilities": [ "measure_temperature", "measure_co2", "measure_humidity", "measure_pressure", "measure_noise", "measure_rain", "measure_wind_strength", "measure_wind_angle", "measure_gust_strength", "measure_gust_angle" ],
			"pair": [
				{
					"id": "start"
				},
				{
					"id": "list_devices",
					"template": "list_devices",
					"navigation": {
						"next": "add_stations"
					}
				},
				{
					"id": "add_stations",
					"template": "add_devices"
				}
			]
		},
		{
			"id": "thermostat",
			"name": {
				"en": "NetAtmo Thermostat"
			},
			"images": {
				"large": "./drivers/thermostat/assets/images/large.png",
				"small": "./drivers/thermostat/assets/images/small.png"
			},
			"class": "thermostat",
			"capabilities": [ "target_temperature", "measure_temperature" ],
			"pair": [
				{
					"id": "start"
				},
				{
					"id": "list_devices",
					"template": "list_devices",
					"navigation": {
						"next": "add_thermostats"
					}
				},
				{
					"id": "add_thermostats",
					"template": "add_devices"
				}
			]
		}
	],
	"dependencies": {
		"request": "*",
		"extend": "*"
	}
}